
[Unit]
Description=Relabel Server (FastAPI)
After=network.target postgresql.service

[Service]
Type=simple
EnvironmentFile=/etc/relabel/relabel.env
WorkingDirectory=/srv/relabel/apps/server
ExecStart=/srv/relabel/apps/server/.venv/bin/python -m uvicorn app.main:app --host ${HOST} --port ${PORT}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
